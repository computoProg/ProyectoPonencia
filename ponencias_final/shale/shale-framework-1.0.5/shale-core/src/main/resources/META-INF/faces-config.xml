<!-- ====================== SHALE CONFIGURATION FILE ======================= -->


<faces-config>

  <!-- Custom JSF Application Objects -->
  <application>
    <property-resolver>
      org.apache.shale.faces.ShalePropertyResolver
    </property-resolver>
    <variable-resolver>
      org.apache.shale.faces.ShaleVariableResolver
    </variable-resolver>
  </application>

  <!-- Custom Components -->
  <component>
    <description>
      The "Token" component emits a transactional token that is then
      validated (on a subsequent form submit) to catch cases where the
      same form was submitted more than once.
    </description>
    <display-name>Token</display-name>
    <component-type>org.apache.shale.Token</component-type>
    <component-class>org.apache.shale.component.Token</component-class>
  </component>

  <!-- Managed Beans -->

  <managed-bean>
    <description>
      Utility object for implementing JSF tag classes. Perhaps this should
      be a Spring bean, but at the time it was added to this config file,
      Shale-Spring integration was just established. Revisit later on... -->
    </description>
    <managed-bean-name>org.apache.shale.TAG_UTILITY_BEAN</managed-bean-name>
    <managed-bean-class>org.apache.shale.util.Tags</managed-bean-class>
    <managed-bean-scope>application</managed-bean-scope>
  </managed-bean>

  <!-- Custom Renderers -->
  <render-kit>
    <renderer>
      <component-family>org.apache.shale.Token</component-family>
      <renderer-type>org.apache.shale.Token</renderer-type>
      <renderer-class>org.apache.shale.renderer.TokenRenderer</renderer-class>
    </renderer>
  </render-kit>

</faces-config>
