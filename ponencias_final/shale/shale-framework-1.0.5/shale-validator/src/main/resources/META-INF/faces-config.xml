<!-- ====================== SHALE CONFIGURATION FILE ======================= -->


<faces-config>

  <!-- Custom JSF Application Objects -->
  <application>
    <view-handler>
      org.apache.shale.validator.faces.ValidatorViewHandler
    </view-handler>
  </application>

  <!-- Custom Components -->
  <component>
    <description>
      The "ValidatorScript" component emits JavaScript for client-side
      validations. 
    </description>
    <display-name>ValidatorScript</display-name>
    <component-type>org.apache.shale.ValidatorScript</component-type>
    <component-class>org.apache.shale.validator.faces.ValidatorScript</component-class>
  </component>

  <!-- Custom Validators -->
  <validator>
    <validator-id>org.apache.shale.CommonsValidator</validator-id>
    <validator-class>org.apache.shale.validator.CommonsValidator</validator-class>
  </validator>


  <!-- ========== Custom Converters ========== -->

  <converter>
      <converter-id>org.apache.shale.converter.Double</converter-id>
      <converter-class>
          org.apache.shale.validator.converter.DoubleConverter
      </converter-class>
  </converter>

  <converter>
      <converter-id>org.apache.shale.converter.Float</converter-id>
      <converter-class>
          org.apache.shale.validator.converter.FloatConverter
      </converter-class>
  </converter>

  <converter>
      <converter-id>org.apache.shale.converter.Integer</converter-id>
      <converter-class>
          org.apache.shale.validator.converter.IntegerConverter
      </converter-class>
  </converter>

  <converter>
      <converter-id>org.apache.shale.converter.Long</converter-id>
      <converter-class>
          org.apache.shale.validator.converter.LongConverter
      </converter-class>
  </converter>

  <converter>
      <converter-id>org.apache.shale.converter.Short</converter-id>
      <converter-class>
          org.apache.shale.validator.converter.ShortConverter
      </converter-class>
  </converter>


  <!-- ========== Custom Validators ========== -->


  <validator>
      <validator-id>org.apache.shale.validator.Double</validator-id>
      <validator-class>
          org.apache.shale.validator.validator.DoubleValidator
      </validator-class>
  </validator>

  <validator>
      <validator-id>org.apache.shale.validator.Float</validator-id>
      <validator-class>
          org.apache.shale.validator.validator.FloatValidator
      </validator-class>
  </validator>

  <validator>
      <validator-id>org.apache.shale.validator.Integer</validator-id>
      <validator-class>
          org.apache.shale.validator.validator.IntegerValidator
      </validator-class>
  </validator>

  <validator>
      <validator-id>org.apache.shale.validator.Long</validator-id>
      <validator-class>
          org.apache.shale.validator.validator.LongValidator
      </validator-class>
  </validator>

  <validator>
      <validator-id>org.apache.shale.validator.Short</validator-id>
      <validator-class>
          org.apache.shale.validator.validator.ShortValidator
      </validator-class>
  </validator>


</faces-config>
